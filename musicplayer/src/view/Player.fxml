<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="80.0" prefWidth="1280.0" styleClass="player" stylesheets="@../ui/stylesheets/player.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ui/icons/011-back.png" />
               </image>
               <HBox.margin>
                  <Insets right="6.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <ImageView fx:id="PlayButton" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="root">
               <image>
                  <Image url="@../ui/icons/013-play.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ui/icons/001-next.png" />
               </image>
               <HBox.margin>
                  <Insets left="6.0" top="5.0" />
               </HBox.margin>
            </ImageView>
         </children>
         <StackPane.margin>
            <Insets top="13.0" />
         </StackPane.margin>
      </HBox>
   </children>
</StackPane>
